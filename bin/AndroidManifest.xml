<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hpeng2.todolist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hpeng2.todolist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hpeng2.todolist.AddEventActivity"
            android:label="@string/title_activity_add_event" >
        </activity>
        <activity
            android:name="com.hpeng2.todolist.ArchivedEventActivity"
            android:label="@string/title_activity_archived_event" >
        </activity>
        <activity
            android:name="com.hpeng2.todolist.EmailEventActivity"
            android:label="@string/title_activity_email_event" >
        </activity>
        <activity
            android:name="com.hpeng2.todolist.StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>
